<?php

/**
 * @file
 * Contains registration.module..
 */

use Drupal\Core\Routing\RouteMatchInterface;

/**
 * Implements hook_help().
 */
function registration_help($route_name, RouteMatchInterface $route_match) {
  switch ($route_name) {
    // Main module help for the registration module.
    case 'help.page.registration':
      $output = '';
      $output .= '<h3>' . t('About') . '</h3>';
      $output .= '<p>' . t('Registration') . '</p>';
      return $output;

    default:
  }
}

/**
 * Implements hook_theme().
 */
function registration_theme() {
  $theme = [];
  $theme['registration_type'] = array(
    'render element' => 'elements',
    'file' => 'registration_type.page.inc',
    'template' => 'registration_type',
  );
  $theme['registration_type_content_add_list'] = [
    'render element' => 'content',
    'variables' => ['content' => NULL],
    'file' => 'registration_type.page.inc',
  ];
  return $theme;
}

/**
* Implements hook_theme_suggestions_HOOK().
*/
function registration_theme_suggestions_registration_type(array $variables) {
  $suggestions = array();
  $entity = $variables['elements']['#registration_type'];
  $sanitized_view_mode = strtr($variables['elements']['#view_mode'], '.', '_');

  $suggestions[] = 'registration_type__' . $sanitized_view_mode;
  $suggestions[] = 'registration_type__' . $entity->bundle();
  $suggestions[] = 'registration_type__' . $entity->bundle() . '__' . $sanitized_view_mode;
  $suggestions[] = 'registration_type__' . $entity->id();
  $suggestions[] = 'registration_type__' . $entity->id() . '__' . $sanitized_view_mode;
  return $suggestions;
}
